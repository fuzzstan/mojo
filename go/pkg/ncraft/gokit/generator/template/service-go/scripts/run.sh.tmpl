#!/usr/bin/env bash

# Just a script to run the demo
cmd=$1
service=$2

control_service() {
    pushd kubernetes >/dev/null

    echo $cmd-$service

    go run ../scripts/kubes.go -cmd $cmd -config -t config/fips-$service-server-config.template.yaml -v values/fips-$service-server-values.yaml
    go run ../scripts/kubes.go -cmd $cmd -t templates/fips-deployment-template.yaml -v values/fips-$service-server-values.yaml
    go run ../scripts/kubes.go -cmd $cmd -t templates/fips-ingress-template.yaml -v values/fips-$service-server-values.yaml
    go run ../scripts/kubes.go -cmd $cmd -t templates/fips-service-template.yaml -v values/fips-$service-server-values.yaml

    popd >/dev/null
}

control() {
	if [ -z $service ]; then

        service="suvey-tile"
	    control_service $cmd

        service="sandbox"
	    control_service $cmd

	    service="learning"
	    control_service $cmd

	    service="lookup"
	    control_service $cmd

		return
	fi

    case $service in
    survey-tile)
    control_service $cmd
       ;;
    sandbox)
    control_service $cmd
       ;;
    learning)
    control_service $cmd
       ;;
    lookup)
    control_service $cmd
       ;;
    esac
}

case $cmd in
	start)
	control create $service
	;;
	stop)
	control delete $service
	;;
	restart)
	control delete $service
	control create $service
	;;
	*)
	echo "$0 <start|stop|restart> [service]"
	exit
	;;
esac